<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
    
    <context-param>
        <param-name>dirUploadFilesF</param-name>
        <param-value>/public/evidencias</param-value>
    </context-param>
    <context-param>
        <param-name>dirUploadFiles</param-name>
        <param-value>/public/evidencias/images/avatar</param-value>
    </context-param>

    <context-param>
        <param-name>maxFileSize</param-name>
        <param-value>400000000</param-value>
    </context-param>    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            entering.jsp
        </welcome-file>
    </welcome-file-list>    
</web-app>
